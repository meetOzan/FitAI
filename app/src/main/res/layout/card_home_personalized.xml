<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="@dimen/_24dp"
    app:cardBackgroundColor="@color/green_700"
    android:layout_marginBottom="@dimen/_12dp"
    app:cardElevation="@dimen/_5dp"
    android:id="@+id/card_home_personalized"
    app:cardCornerRadius="@dimen/_12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_home_personalized"
            android:layout_width="@dimen/_160dp"
            android:layout_height="@dimen/_160dp"
            android:layout_marginStart="-45dp"
            android:src="@drawable/bg_plan_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_personalized_card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dumbell"
            app:layout_constraintBottom_toBottomOf="@+id/tv_create_personalized"
            app:layout_constraintEnd_toEndOf="@+id/iv_home_personalized"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_create_personalized" />

        <ImageView
            android:id="@+id/iv_ai_powered"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:src="@drawable/ai_powered"
            app:layout_constraintBottom_toBottomOf="@+id/iv_personalized_card_icon"
            app:layout_constraintEnd_toEndOf="@+id/iv_home_personalized"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="@+id/iv_personalized_card_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/tv_create_personalized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16dp"
            android:layout_marginStart="@dimen/_12dp"
            android:fontFamily="@font/urbanist_bold"
            android:text="@string/create_personalized_training"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_home_personalized"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>