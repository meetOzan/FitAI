<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="darkButtonStyle">
        <item name="android:background">@drawable/dark_background</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="lightButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textInputEditTextStyleInfo">
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:maxLines">3</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingBottom">@dimen/_48dp</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">@dimen/_30sp</item>
    </style>

    <style name="nextButtonStyle">
        <item name="android:backgroundTint">@color/main_grey</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:paddingTop">@dimen/_16dp</item>
        <item name="android:paddingBottom">@dimen/_16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="birthdayDayMonthStyle">
        <item name="android:background">@drawable/bg_grey_stroke</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:layout_below">@id/birthday_title</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:background">@drawable/bg_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@drawable/selector_radio_text_color</item>
    </style>

    <style name="textViewPersonalInfoStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">3</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_48sp</item>
    </style>

    <style name="textViewPersonalInfoUnitStyle">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textColor">@color/main_grey</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="nextButtonOnBoardingStyle">
        <item name="android:backgroundTint">@color/main_grey</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:text">@string/sonraki</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="skipButtonOnBoardingStyle">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:text">@string/atla</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background_edit_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cyan_blue</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
    </style>

    <style name="Button4">
        <item name="cornerSize">20%</item>
    </style>

    <style name="otpBoxStyle">
        <item name="android:background">@drawable/bg_grey_stroke</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

</resources>